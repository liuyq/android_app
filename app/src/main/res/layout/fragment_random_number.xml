<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liu.dua.dua.Main2Activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/show_message_random_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="60sp"
            android:textColor="#08f518"
            android:layout_gravity="left"
            android:width="100dp"
            android:text="35"
            android:layout_weight="0.57"
            android:textAlignment="center"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="36"
            android:textSize="60sp"
            android:textColor="#08f518"
            android:id="@+id/random_next_number"
            android:width="100dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/random_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Check"
            android:onClick="randomNumber"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/random_number_statistic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:textColor="#08f518"
        android:text="Total:0 Pass:0 Fail: 0"
        android:layout_gravity="left"
        android:layout_weight="0.46"
        android:textAlignment="center" />

</LinearLayout>